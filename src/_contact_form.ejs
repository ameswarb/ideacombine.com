<div class="row contact form">
  <form id="contact-form" data-abide="ajax">
    <div class="row error state" style="display:none;">
      <div class="message small-12 medium-8 medium-offset-2 large-6 large-offset-3 columns end">
        <p>We're sorry, an error has occurred.</p>
        <p>Please check your form details and
          try again or give us a call at
          <a class="colorcycle" href="tel:9728631930">972.863.1930</a>
        </p>
      </div>
    </div><!-- .row -->

    <div class="row">
      <div class="small-12 medium-8 medium-offset-2 large-6 large-offset-3 columns end input-wrapper">
        <input type="text" name="name" placeholder="Name" id="name" required>
        <small class="validation error">^ A valid name is required.</small>
      </div>
    </div><!-- .row -->

    <div class="row">
      <div class="small-12 medium-8 medium-offset-2 large-6 large-offset-3 columns end input-wrapper">
        <input type="email" name="email" placeholder="Email" id="email" required>
        <small class="validation error">^ A valid email address is required.</small>
      </div>
    </div><!-- .row -->

    <div class="row">
      <div class="small-12 medium-8 medium-offset-2 large-6 large-offset-3 columns end input-wrapper">
        <textarea name="comment" placeholder="Comment" required></textarea>
        <small class="validation error">^ A comment is required.</small>
      </div>
    </div><!-- .row -->

    <div class="row butan">
      <div class="small-12 medium-4 medium-offset-4 large-4 large-offset-4 columns end">
        <input type="submit" class="button submit" value="Submit">
      </div>
    </div><!-- .row -->
  </form>
</div><!-- .contact -->
